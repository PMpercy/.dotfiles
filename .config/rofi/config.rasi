@theme "darker"


element-text, element-icon , mode-switcher {
    background-color: inherit;
    text-color:       inherit;
    background-color: transparent;
}




window {
    height: 460px;
    padding: 30px;
    border: 0px;
    border-color: @border;
    background-color: @bg;
    border-radius: 10px;
}

mainbox {
    background-color: transparent;
    padding: 0px;
}

inputbar {
    children: [prompt,entry];
    background-color: transparent;
    border-radius: none;
}

prompt {
    background-color: transparent;
    padding: 6px;
    text-color: @fg;
    border-radius: 3px;
    margin: 0px 0px 0px 20px;
}

textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    padding: 6px;
    margin: 0px 0px 0px 10px;
    text-color: @fg;
    background-color: transparent;
}

listview {
    border: 0px 0px 0px;
    padding: 6px 0px 0px;
    margin: 10px 0px 0px 20px;
    columns: 2;
    background-color: @bg;
}

element {
    padding: 5px;
    background-color: transparent;
    text-color: @fg;
}

element-icon {
    size: 25px;
}

element selected {
    background-color:  @select ;
    text-color: @fg;
    border-radius: 10px;
}

mode-switcher {
    spacing: 0;
  }

button {
    padding: 10px;
    background-color: @bg;
    text-color: @fg;
    vertical-align: 0.5; 
    horizontal-align: 0.5;
}

button selected {
  background-color: @select;
  text-color: @fg;
}

